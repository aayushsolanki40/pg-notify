{
  "name": "pg-notify-demo",
  "version": "1.0.0",
  "description": "Express TypeScript project demonstrating PostgreSQL NOTIFY/LISTEN pub/sub mechanism",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "ts-node src/scripts/setup-db.ts"
  },
  "keywords": [
    "postgresql",
    "notify",
    "listen",
    "pubsub",
    "express",
    "typescript"
